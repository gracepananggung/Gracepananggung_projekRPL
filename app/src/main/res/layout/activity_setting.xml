<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_bright"
    android:textColor="@color/colorOnBackground"
    android:padding="24dp"
    tools:context=".SettingActivity">

  <!-- Header -->
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:padding="16dp"
      android:layout_marginBottom="24dp">

    <TextView
        android:id="@+id/setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Setting"
        android:textSize="24sp"
        android:textStyle="bold"
        android:paddingBottom="12dp" />

    <ImageView
        android:id="@+id/profileImage"
        android:layout_width="117dp"
        android:layout_height="97dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_setting"
        android:contentDescription="Foto Profil"/>
  </LinearLayout>


  <!-- notifikasi -->

  <TextView
      android:id="@+id/notif"
      android:layout_width="300dp"
      android:layout_height="wrap_content"
      android:layout_marginBottom="16dp"
      android:background="@drawable/bg_rounded_box"
      android:drawableStart="@drawable/ic_notif"
      android:drawablePadding="12dp"
      android:padding="10dp"
      android:text="Notifikasi"
      android:textSize="14sp"
      android:layout_gravity="center"/>

  <!-- keamanan -->

  <TextView
      android:id="@+id/privasi"
      android:layout_width="300dp"
      android:layout_height="wrap_content"
      android:text="Privasi"
      android:textSize="14sp"
      android:drawableStart="@drawable/ic_lock"
      android:drawablePadding="12dp"
      android:padding="10dp"
      android:layout_marginBottom="16dp"
      android:background="@drawable/bg_rounded_box"
      android:layout_gravity="center"/>


  <!-- mode -->
  <Switch
      android:id="@+id/mode"
      android:layout_width="300dp"
      android:layout_height="wrap_content"
      android:textSize="14sp"
      android:drawableStart="@drawable/ic_mode"
      android:drawablePadding="12dp"
      android:padding="10dp"
      android:background="@drawable/bg_rounded_box"
      android:text="Dark mode"
      android:layout_marginBottom="16dp"
      android:textColor="#575454"
      android:layout_gravity="center"/>

  <!-- tentang aplikasi -->
  <TextView
      android:id="@+id/tentang"
      android:layout_width="300dp"
      android:layout_height="wrap_content"
      android:text="Tentang aplikasi"
      android:textSize="14sp"
      android:drawableStart="@drawable/ic_info"
      android:drawablePadding="12dp"
      android:padding="10dp"
      android:background="@drawable/bg_rounded_box"
      android:layout_gravity="center"/>




</LinearLayout>