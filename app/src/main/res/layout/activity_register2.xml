<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@android:color/holo_blue_bright"
    tools:context="com.example.gracepananggung.RegisterActivity2">

    <!-- logo -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="229dp"
        android:layout_height="181dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="104dp"
        android:layout_marginTop="33dp"
        android:layout_marginEnd="107dp"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="264dp"
        android:layout_height="45dp"
        android:layout_below="@+id/imageView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="103dp"
        android:layout_marginTop="-8dp"
        android:layout_marginEnd="54dp"
        android:text="FictionFrenzy"
        android:textColor="#FF66B2"
        android:textSize="22dp"
        android:textStyle="bold" />

    <!-- input nama -->
    <EditText
        android:id="@+id/editTextPersonName"
        android:layout_width="324dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView4"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="27dp"
        android:layout_marginTop="53dp"
        android:layout_marginEnd="27dp"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName" />

    <!-- input email -->
    <EditText
        android:id="@+id/editTextTextEmailAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextPersonName"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="27dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="27dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress" />

    <!-- input password -->
    <EditText
        android:id="@+id/editTextTextPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextTextEmailAddress"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="27dp"
        android:layout_marginEnd="27dp"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword" />

    <!-- tombol register -->
    <Button
        android:id="@+id/buttonRegister"
        android:layout_width="207dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextTextPassword"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="110dp"
        android:layout_marginTop="57dp"
        android:layout_marginEnd="103dp"
        android:backgroundTint="#F4CFF4"
        android:text="Register"
        android:textColor="#575454"
        android:textSize="16dp"
        android:textStyle="bold" />

    <!-- sudah punya akun? -->
    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonRegister"
        android:layout_marginLeft="105dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="3dp"
        android:text="Sudah punya akun?"
        android:textSize="14dp"
        android:textStyle="bold"/>

    <!-- text login -->
    <TextView
        android:id="@+id/textLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonRegister"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@id/textView5"
        android:text="Login"
        android:textColor="#EB2768"
        android:textSize="14dp" />


</RelativeLayout>