<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PINJAM BUKU"
            android:textStyle="bold"
            android:textSize="24sp"
            android:layout_gravity="center"
            android:paddingBottom="16dp" />

        <EditText
            android:id="@+id/etNama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nama Peminjam"
            android:inputType="textPersonName"
            android:layout_marginTop="12dp"/>

        <EditText
            android:id="@+id/etJudul"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Judul Buku"
            android:layout_marginTop="8dp"/>

        <EditText
            android:id="@+id/etJmlj"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Jumlah Buku"
            android:inputType="number"
            android:layout_marginTop="8dp"/>

        <EditText
            android:id="@+id/etTanggalPinjam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tanggal Pinjam (dd/MM/yyyy)"
            android:inputType="date"
            android:layout_marginTop="8dp"/>

        <EditText
            android:id="@+id/etTanggalKembali"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tanggal Kembali (dd/MM/yyyy)"
            android:inputType="date"
            android:layout_marginTop="8dp"/>
    </LinearLayout>
</ScrollView>
